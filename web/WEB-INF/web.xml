<web-app version="5.0" xmlns="https://jakarta.ee/xml/ns/jakartaee">
    <listener>
        <description>HttpSessionListener</description>
        <listener-class>controller.SessionServletListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>GetHome</servlet-name>
        <servlet-class>controller.GetHome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetHome</servlet-name>
        <url-pattern>/GetHome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>GetHome</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Restricted Methods</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
    </security-constraint>
</web-app>
